@{
    ViewData["Title"] = "Bienvenido a EcommerceBasicoAWS";
}

<div class="text-center hero-section">
    <h1 class="display-4 fw-bold mb-4 animate__animated animate__fadeInDown">
        Bienvenido a <span class="text-primary">EcommerceBasicoAWS</span>
    </h1>
    <p class="lead text-muted mb-5 animate__animated animate__fadeInUp animate__delay-0-5s">
        Descubre las últimas tendencias y encuentra productos increíbles.
    </p>
    @if (!User.Identity.IsAuthenticated)
    {
        <p class="animate__animated animate__fadeInUp animate__delay-1s">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg custom-btn-primary shadow-sm">
                Inicia sesión para explorar la tienda
            </a>
        </p>
    }
    else if (User.IsInRole(EcommerceBasicoAWS.Interfaces.IUserRoles.CLIENTE))
    {
        <p class="animate__animated animate__fadeInUp animate__delay-1s">
            <a asp-controller="Tienda" asp-action="Index" class="btn btn-success btn-lg shadow-sm">
                Ir a la Tienda
            </a>
        </p>
    }
</div>

---

<div class="container my-5">
    <h2 class="text-center mb-5 fw-bold animate__animated animate__fadeIn">Explora Nuestras Secciones</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col animate__animated animate__fadeInUp animate__delay-0-2s">
            <div class="card h-100 shadow-sm border-0 section-card">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold text-primary mb-3">
                        <i class="bi bi-star-fill me-2"></i>Productos Destacados
                    </h5>
                    <p class="card-text text-muted">
                        Descubre nuestra selección de productos más populares y mejor valorados.
                    </p>
                    <a href="#" class="btn btn-outline-primary btn-sm">Ver Destacados</a>
                </div>
            </div>
        </div>

        <div class="col animate__animated animate__fadeInUp animate__delay-0-4s">
            <div class="card h-100 shadow-sm border-0 section-card">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold text-success mb-3">
                        <i class="bi bi-gift-fill me-2"></i>Novedades
                    </h5>
                    <p class="card-text text-muted">
                        Sé el primero en conocer nuestros productos recién llegados.
                    </p>
                    <a href="#" class="btn btn-outline-success btn-sm">Ver Novedades</a>
                </div>
            </div>
        </div>

        <div class="col animate__animated animate__fadeInUp animate__delay-0-6s">
            <div class="card h-100 shadow-sm border-0 section-card">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold text-danger mb-3">
                        <i class="bi bi-lightning-fill me-2"></i>Ofertas Especiales
                    </h5>
                    <p class="card-text text-muted">
                        Aprovecha nuestros descuentos y promociones por tiempo limitado.
                    </p>
                    <a href="#" class="btn btn-outline-danger btn-sm">Ver Ofertas</a>
                </div>
            </div>
        </div>

        <div class="col animate__animated animate__fadeInUp animate__delay-0-8s">
            <div class="card h-100 shadow-sm border-0 section-card">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold text-info mb-3">
                        <i class="bi bi-grid-fill me-2"></i>Explora Categorías
                    </h5>
                    <p class="card-text text-muted">
                        Encuentra exactamente lo que buscas navegando por nuestras categorías.
                    </p>
                    <a href="#" class="btn btn-outline-info btn-sm">Todas las Categorías</a>
                </div>
            </div>
        </div>

        <div class="col animate__animated animate__fadeInUp animate__delay-1s">
            <div class="card h-100 shadow-sm border-0 section-card">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold text-warning mb-3">
                        <i class="bi bi-headset me-2"></i>Soporte al Cliente
                    </h5>
                    <p class="card-text text-muted">
                        ¿Necesitas ayuda? Nuestro equipo de soporte está listo para asistirte.
                    </p>
                    <a href="#" class="btn btn-outline-warning btn-sm">Contacto</a>
                </div>
            </div>
        </div>

        <div class="col animate__animated animate__fadeInUp animate__delay-1-2s">
            <div class="card h-100 shadow-sm border-0 section-card">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold text-secondary mb-3">
                        <i class="bi bi-building me-2"></i>Sobre Nosotros
                    </h5>
                    <p class="card-text text-muted">
                        Conoce más sobre nuestra misión y valores como e-commerce.
                    </p>
                    <a href="#" class="btn btn-outline-secondary btn-sm">Conócenos</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}